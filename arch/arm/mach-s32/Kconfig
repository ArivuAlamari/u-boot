config SYS_SOC
	string
	default "s32"

config MACH_S32
	bool
	select ARM64
	select DM
	select OF_BOARD_SETUP

config SYS_VENDOR
	string
	default "nxp"

config NXP_S32CC
	bool
	imply DM_ETH
	imply DM_I2C
	imply DM_PCI
	imply DM_SPI
	imply DM_SPI_FLASH
	imply DWC_ETH_QOS_DEVICES
	imply DWC_ETH_QOS_S32CC
	imply FSL_DSPI
	imply FSL_QSPI
	imply MISC
	imply MP
	imply NXP_S32CC_PIT_TIMER
	imply PCI
	imply PCIE_S32GEN1
	imply SPI
	imply SYS_I2C_MXC
	imply TIMER
	select ARM_SMCCC
	select CLK
	select CLK_SCMI
	select CPU
	select DISTRO_DEFAULTS
	select DM_GPIO
	select DM_MMC
	select DM_SERIAL
	select FSL_LINFLEXUART
	select FSL_USDHC
	select MACH_S32
	select MMC_HS400_ES_SUPPORT
	select MMC_HS400_SUPPORT
	select OF_CONTROL
	select OF_SEPARATE
	select OF_SYSTEM_SETUP
	select PINCTRL
	select PINCTRL_FULL
	select PINCTRL_S32CC
	select S32CC_GPIO
	select SCMI_FIRMWARE
	select SYSRESET
	select SYSRESET_PSCI
	select SYS_MALLOC_F

source "arch/arm/mach-s32/s32-cc/Kconfig"
