if ARCH_S32XXXX

config SYS_VENDOR
	string
	default "freescale"

config SYS_SOC
	string
	default "s32xxxx"

config BAUDRATE
	int "Serial baudrate"
	default 115200

choice
	prompt "Select S32V234 Target Board Support"
	default TARGET_S32V234EVB
	help
	  S32V234 Target Board Selection

config TARGET_S32V234EVB
	bool "Support s32v234evb"

config TARGET_S32V244EVB
	bool "Support s32v244evb"

config TARGET_S32V234FVB
	bool "Support s32v234fvb"

config TARGET_S32V234PCIE
	bool "Support s32v234pcie"

config TARGET_S32V234TMDP
	bool "Support s32v234tmdp"

endchoice

if TARGET_S32V234EVB

choice
	prompt "S32V234EVB Board Family Member"
	default S32V234EVB_29288
	help
	  S32V234EVB Board Family Members

config S32V234EVB_28899
	bool "S32V234EVB_28899"

config S32V234EVB_29288
	bool "S32V234EVB_29288"

config S32V234BBMINI_29406
	bool "S32V234BBMINI_29406"

endchoice

endif

choice
	prompt "Select DDR type"
	default S32XXXX_LPDDR2
	help
	  S32XXXX DDR Configuration

config S32XXXX_LPDDR2
	bool "LPDDR2 Support"
	help
	  Enable the support for Micron LPDDR2

config S32XXXX_LPDDR4
	bool "LPDDR4 Support"
	help
	  Enable the support for Micron LPDDR4

config S32XXXX_DDR3
	bool "DDR3 Support"
	help
	  Enable the support for Micron DDR3

endchoice

config DDR_HANDSHAKE_AT_RESET
	bool "Enable DDR handshake"
	default y
	help
	  Enable DDR handshake after functional reset

source "board/freescale/s32v234evb/Kconfig"
source "board/freescale/s32v234fvb/Kconfig"
source "board/freescale/s32v234pcie/Kconfig"
source "board/freescale/s32v234tmdp/Kconfig"
source "board/freescale/s32v244evb/Kconfig"

endif
